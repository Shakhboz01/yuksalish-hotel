<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Bookings</h3>
      <%= link_to 'Добавить новый', new_booking_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
                          <th>Number of people</th>
                          <th>Finished at</th>
                          <th>Breakfast included</th>
                          <th>Home</th>
                          <th>Country</th>
                        <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.number_of_people %></td>
              <td><%= booking.finished_at %></td>
              <td><%= booking.breakfast_included %></td>
              <td><%= booking.home.number %></td>
              <td><%= booking.country %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
