
<%= simple_form_for(booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :number_of_people, label: 'Количество гостей' %>
    <%= f.input :finished_at, as: :hidden %>
    <%= f.input :breakfast_included, label: 'Завтрак включен' %>
    <%= f.association :home, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Оформить' %>
  </div>
<% end %>
