<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Расходы</h3>
      <%= link_to 'Добавить новый', new_expenditure_path, class: "btn btn-success min-width-btn" %>
    </div>

    <div class="card-body">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Цена<br><%= num_to_usd @total_price %></th>
            <th>Тип расхода</th>
            <th>Оформлено в</th>
            <th>Оформлено от</th>
            <th>Коммент</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @expenditures.each do |expenditure| %>
            <tr>
              <td><%= num_to_usd expenditure.price %></td>
              <td><%= expenditure.expenditure_type %></td>
              <td><%= strf_datetime expenditure.created_at %></td>
              <td><%= expenditure.user.name %></td>
              <td><%= expenditure.comment %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @expenditures %>
    </div>
  </div>
</div>
