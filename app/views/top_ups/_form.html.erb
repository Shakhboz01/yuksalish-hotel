
<%= simple_form_for(top_up) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :booking, as: :hidden %>
    <%= f.association :guest_info, label: 'Выберите гостя', collection: @guest_infos %>
    <%= f.input :price, label: 'цена' %>
    <%= f.input :payment_type, label: 'Тип оплаты', collection: TopUp.payment_types.keys.map { |unit| [TopUp.human_attribute_name("unit.#{unit}"), unit] }, include_blank: false %>
    <%= f.input :comment, placeholder: 'Не обязательно' %>
    <%= f.input :created_at, label: 'Дата' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Оформить' %>
  </div>
<% end %>
