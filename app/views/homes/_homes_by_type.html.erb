<div class="card shadow">
  <div class="card-header d-flex justify-content-between align-items-center">
    <% if defined?(hotel) %>
      <h1>HOTEL</h1>
    <% else %>
      <h1>HOSTEL</h1>
    <% end %>

  </div>
  <div class="card-body">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Открыт в</th>
          <th>Кол. гостей</th>
          <th>Завтрак включон</th>
        </tr>
      </thead>
      <tbody>
        <% homes.each do |home| %>
          <tr class="<%= home.active? ? 'table-success' : '' %>">
            <td><%= home.number %></td>
            <td><%= strf_datetime home.started_at %></td>
            <td><%= home.number_of_guests %></td>
            <td><%= active_check home.breakfast_included %></td>
            <td colspan="5">
              <%= clink_to 'Посмотреть', home, 'fa-search' %> |
              <% if home.active? %>
                <%= clink_to 'Закрыть комнату', close_home_path(home), 'fa-person-walking-luggage' %> |
                <%= clink_to 'Показать гостей', guest_infos_url(home_id: home.id), 'fa-user-tie' %> |
                <%= clink_to 'Оформить оплату', new_top_up_url(home_id: home.id), 'fa-hand-holding-dollar' %> |
                <%= clink_to 'Показать историю оплат', top_ups_url(home_id: home.id), 'fa-magnifying-glass-dollar' %>
              <% else %>
                <%= clink_to 'Открыть комнату', new_booking_path(home_id: home.id), 'fa-person-shelter' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
